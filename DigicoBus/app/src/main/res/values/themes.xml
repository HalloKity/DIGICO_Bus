<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DigicoBus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="titleCentered">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mint</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mint_dark</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/gray_disabled</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="editTextStyle">@style/customTextViewFontStyle</item>
        <item name="android:includeFontPadding">false</item>
        <item name="bottomSheetDialogTheme">@style/BottomDialogTheme</item>

    </style>

    <style name="EditText.Join" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/gray_70</item>
        <item name="android:textColorHint">@color/gray_70</item>
        <item name="colorAccent">@color/mint</item>
        <item name="colorControlNormal">@color/gray_70</item>
        <item name="colorControlActivated">@color/gray_70</item>
    </style>

    <style name="EditText.Search" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_70</item>
        <item name="colorAccent">@color/mint</item>
        <item name="colorControlNormal">@color/mint</item>
        <item name="colorControlActivated">@color/mint</item>
    </style>

    <style name="dialog">
        <item name="android:background">@drawable/dialog_background_round</item>
    </style>

    <style name="BottomDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomDialogStyle</item>
    </style>
    <style name="BottomDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_dialog_background_round</item>
    </style>

    <!--바텀네비게이션 뷰 글자크기 키우기-->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">18dp</item>
<!--        <item name="android:textViewStyle">@style/customTextViewFontStyle.bold</item>-->
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">18dp</item>
<!--        <item name="android:textViewStyle">@style/customTextViewFontStyle.bold</item>-->
    </style>


</resources>
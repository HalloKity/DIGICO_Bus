<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIGICO BUS"
            android:textSize="18dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textColor="@color/white"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="70dp"
        android:paddingRight="70dp">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="32dp"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_kt"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="KT 임직원"
            android:textSize="12dp"
            android:layout_marginRight="-8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_kt"
            android:enabled="true"
            app:layout_constraintRight_toLeftOf="@+id/btn_co"
            app:layout_constraintTop_toBottomOf="@id/tv_login"/>
        <Button
            android:id="@+id/btn_co"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="협력사"
            android:textSize="12dp"
            android:background="@drawable/btn_co"
            android:enabled="false"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_kt"
            app:layout_constraintTop_toBottomOf="@id/tv_login"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_kt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/edit_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_login_corner_rectangle"
            android:hint="아이디 : 사번 입력"
            android:textSize="14dp"
            android:inputType="text"
            android:drawableStart="@drawable/img_user_id"
            android:drawablePadding="10dp"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_login_corner_rectangle"
            android:hint="비밀번호 입력"
            android:textSize="14dp"
            android:inputType="textPassword"
            android:drawableStart="@drawable/img_user_password"
            android:drawablePadding="10dp"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_id"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="로그인"
            android:textSize="14dp"
            android:includeFontPadding="false"
            android:enabled="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:background="@drawable/btn_login"
            app:layout_constraintTop_toBottomOf="@id/edit_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_find_id_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID/PW 찾기"
            android:textSize="15dp"
            android:textColor="@color/gray_70"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="55dp"
            app:layout_constraintTop_toBottomOf="@id/btn_login"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="15dp"
            android:textColor="@color/gray_70"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/btn_login"
            app:layout_constraintLeft_toRightOf="@id/tv_find_id_pw"/>

        <TextView
            android:id="@+id/tv_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray_70"
            app:layout_constraintTop_toBottomOf="@id/btn_login"
            app:layout_constraintLeft_toRightOf="@id/tv_middle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>